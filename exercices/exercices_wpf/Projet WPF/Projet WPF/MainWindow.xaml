<Window x:Class="Projet_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet_WPF"
        mc:Ignorable="d"
        Title="GneuGenerator" Height="450" Width="800">
    <Grid>
        <Button Content="Cliquez pour générer un gneu" HorizontalAlignment="Left" Margin="30,23,0,0" VerticalAlignment="Top" Width="181" Click="Button_Click" Height="51"/>
